            </Button.Background>
        </Button>
        <Button Content="Button" HorizontalAlignment="Left" Height="120" Margin="432,286,0,0" VerticalAlignment="Top" Width="120"/>
        <Button Content="Button" HorizontalAlignment="Left" Height="120" Margin="432,0,0,0" VerticalAlignment="Center" Width="120"/>
        <Label Content="Label" HorizontalAlignment="Left" Height="120" Margin="568,26,0,0" VerticalAlignment="Top" Width="180"/>
        <Label Content="Label" HorizontalAlignment="Left" Height="120" Margin="568,286,0,0" VerticalAlignment="Top" Width="180"/>
        <Label Content="Label" HorizontalAlignment="Left" Height="120" Margin="568,0,0,0" VerticalAlignment="Center" Width="180"/>

    </Grid>
</Window>
